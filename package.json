{
    "name": "minimal-react-typescript-boilerplate",
    "version": "0.0.1",
    "description": "A minimal React 18 boilerplate using typeScript and webpack 5.",
    "main": "./src/index.tsx",
    "scripts": {
        "build": "webpack --config webpack.prod.js",
        "start": "webpack serve --config webpack.dev.js",
        "test": "jest --config jest.config.js",
        "lint": "eslint ./src/**/* --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint --fix ./src/**/* --ext .js,.jsx,.ts,.tsx",
        "pretty": "prettier --check ./src/**/*",
        "pretty:fix": "prettier --write ./src/**/*"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@babel/preset-env": "^7.21.0",
        "@babel/preset-typescript": "^7.21.0",
        "@types/jest": "^29.5.0",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "babel-jest": "^29.5.0",
        "css-loader": "^6.8.1",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "jest": "^29.5.0",
        "prettier": "^2.8.8",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.4",
        "url-loader": "^4.1.1",
        "webpack": "^5.76.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.13.3"
    },
    "author": "Abdul Aziz",
    "keywords": [
        "react 18",
        "webpack",
        "webpack 5",
        "typeScript",
        "eslint"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/anuj-webdev/minimal-react-boilerplate"
    }
}
